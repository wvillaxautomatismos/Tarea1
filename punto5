// recibe tres numeros en coma flotante e identifica cual de los 3 es el mayor
#include <iostream>
#include <string>

int main()
{
  float a,b,c,s;
  std::string cadena("");
  std::cout<< "Por favor ingrese tres numeros flotantes separando uno del otro por un espacio \n";
  std::cin>> a >> b >> c;
  a > b ? (a > c ? s = a:s=c):(b>c ? s = b:s=c);
  a==b? a == c ? cadena = "los tres numeros son iguales a: ": cadena ="El numero mayor es: ": cadena ="El numero mayor es: ";
  std::cout<<cadena<<s;
}
